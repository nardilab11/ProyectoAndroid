<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Locales_act">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="380dp"
        android:layout_height="165dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="127dp"
                android:layout_height="31dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Mis Locales"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="353dp"
                android:layout_height="109dp"
                android:justificationMode="inter_word"
                android:text="Acá puede administrar sus locales. Para añadir un local, ingrese todos los datos del local. Para mostrar y eliminar un local en específico, solo ingrese el ID correspondiente. Para modificar un local específico, ingrese el ID del local y luego la información a modificar."
                android:textColor="#3F51B5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:layout_constraintVertical_bias="0.26" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="360dp"
        android:layout_height="312dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="335dp"
                android:layout_height="198dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/etIDLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el ID"
                    android:inputType="number"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etNomLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el nombre"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etStockBotLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el stock de botellas"
                    android:inputType="number"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etStockBidLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el stock de bidones"
                    android:inputType="number"
                    android:minHeight="48dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="335dp"
                android:layout_height="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ID"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"
                        android:background="#F8FFAE"/>

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Nombre"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"
                        android:background="#F8FFAE"/>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Stock botellas"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"
                        android:background="#F8FFAE"/>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Stock bidones"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"
                        android:background="#F8FFAE"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvIDLoc"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="ID"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/tvNomLoc"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Nombre"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/tvStockBotLoc"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Stock"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/tvStockBidLoc"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Stock"
                        android:textColor="#3F51B5" />
                </TableRow>

            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="210dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="191dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#50C9C3"
                    android:onClick="guardarLocal"
                    android:text="Añadir Local"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#50C9C3"
                    android:onClick="mostrarLocal"
                    android:text="Mostrar Local"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#50C9C3"
                    android:onClick="eliminarLocal"
                    android:text="Eliminar Local"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#50C9C3"
                    android:onClick="modificarLocal"
                    android:text="Modificar Local"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="15dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>